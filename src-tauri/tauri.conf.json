{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Keyboard Layout",
  "version": "0.2.1",
  "identifier": "me.maxistar.keyri-app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "overlay",
        "title": "Keyboard Layout",
        "transparent": true,
        "decorations": true,
        "alwaysOnTop": true,
        "resizable": false,
        "fullscreen": false,
        "width": 1300,
        "height": 490,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
